light-blue = #E9FAFE
gold = #FCBD55

*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin 0
  padding-bottom 2em
  background light-blue

a
  color #00B7FF

header
  height 200px
  background url("/images/bunting-flag.png") repeat-x

.logo
  font 60px 'Sacramento', cursive;
  color slategray
  text-align center
  background white
  padding .25em 0
  box-shadow 0 0 0 1px rgba(0,0,0,.1)
  max-width 650px
  margin 0 auto
  border-radius 5px

.ui.form
  max-width 650px
  margin 2em auto

.ui.segment
  padding 2em

footer
  text-align center
  color slategray

footer a
  margin-left .5em
  text-decoration none

footer a:hover
  text-decoration underline

